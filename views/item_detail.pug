extends layout

block content
  div.container
    h1= item.name
    p= item.description
    p Price: $#{item.price}
    p Quantity in Stock: #{item.quantity_in_stock}
  hr
  div.container
    form(action=item.url + "/delete", method="POST", onsubmit="return confirm('Are you sure you want to delete this item?');")
      input.btn.btn-outline-danger(type="submit", value="Delete")