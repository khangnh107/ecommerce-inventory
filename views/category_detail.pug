extends layout

block content
  div.container
    h1= title
    p= category.description
    
    ul
      for item in itemsInCategory
        li
          a(href=item.url)= item.name

  hr
  
  div.container
    form(action=category.url + "/delete", method="POST", onsubmit="return confirm('Are you sure you want to delete this category?');")
      input.btn.btn-outline-danger(type="submit", value="Delete")