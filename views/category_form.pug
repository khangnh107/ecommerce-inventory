extends layout

block content
  h1= title
  form(action="/catalog/category/create", method="POST")
    div.mb-3
      label.form-label(for="category-name") Category Name:
      input.form-control(type="text", id="category-name", name="categoryName")
    div.mb-3
      label.form-label(for="category-description") Category Description:
      textarea.form-control(type="text", id="category-description", name="categoryDescription", rows=3)
    div
      input.btn.btn-success(type="submit", value="Create")