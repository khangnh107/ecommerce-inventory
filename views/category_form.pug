extends layout

block content
  h1= title
  form(method="POST")
    div.mb-3
      label.form-label(for="category-name") Category Name:
      input.form-control(type="text", id="category-name", name="categoryName", value=(category === undefined ? "" : category.name))
    div.mb-3
      label.form-label(for="category-description") Category Description:
      textarea.form-control(type="text", id="category-description", name="categoryDescription", rows=3)= (category === undefined ? "" : category.description)
    div
      input.btn.btn-outline-success(type="submit")