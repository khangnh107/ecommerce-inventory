extends layout

block content
  h1= title
  form(method="POST")
    div.mb-3
      label.form-label(for="item-name") Item Name:
      input.form-control(type="text", id="item-name", name="itemName", value=(item === undefined ? "" : item.name))
    div.mb-3
      label.form-label(for="item-description") Category Description:
      textarea.form-control(type="text", id="item-description", name="itemDescription", rows=3)= (item === undefined ? "" : item.description)
    div.mb-3
      label.form-label(for="item-category") Category of Item:
      select.form-select(id="item-category", name="itemCategoryId" aria-label="Which Category does Item belong to?")
        for category in categoryList
          if item !== undefined
            option(value=category.id, selected=(category.id === item.category_id ? true : false))= category.name
          else
            option(value=category.id)= category.name
    div.mb-3
      label.form-label(for="item-price") Price:
      input.form-control(type="number", id="item-price", name="itemPrice", min=0, value=(item === undefined ? "" : item.price))
    div.mb-3
      label.form-label(for="item-quantitiy") Quantity in Stock:
      input.form-control(type="number", id="item-quantitiy", name="itemQuantityInStock", min=0, value=(item === undefined ? "" : item.quantity_in_stock))
    div
      input.btn.btn-outline-success(type="submit")