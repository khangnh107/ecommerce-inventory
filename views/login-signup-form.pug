extends layout

block content
  h1= title
  form(method="POST")
    div.mb-3
      label.form-label(for="username") Username:
      input.form-control(type="text", id="username", name="username")
    div.mb-3
      label.form-label(for="password") Password:
      input.form-control(type="text", id="password", name="password")
    div
      input.btn.btn-outline-success(type="submit")